# Changing "ils" to "exa"
alias ls='exa  --color=always --group-directories-first'
alias ll='exa -alF --icons=auto --color=always --group-directories-first'
alias la='exa -a --icons=auto --color=always --group-directories-first'
alias l='exa -F --icons=auto --color=always --group-directories-first'
alias l.='exa -a --icons=auto  --color=always --group-directories-first| grep  -E "^\."'
alias tree='exa -aT --icons=auto --color=always'

#cat to bat
alias cat='bat'

#vim to nvim 
alias vim='nvim'